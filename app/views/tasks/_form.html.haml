= form_for(@task) do |f|
  - if @task.errors.any?
    #error_explanation
      %h2
        = pluralize(@task.errors.count, "error")
        prohibited this task from being saved:
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title, 'TITLE'
    = f.text_field :title, class: 'task-title'
  .field.point-radio
    %ul
      %li.point-radio-text EASY
      %li.pt1
        = f.radio_button :point, 1
        = f.label :point, for: 'task_point_1', class: 'pt1' do
          %span.num<> 1
          pt
      %li.pt2
        = f.radio_button :point, 2
        = f.label :point, for: 'task_point_2', class: 'pt2' do
          %span.num<> 2
          pt
      %li.pt3
        = f.radio_button :point, 3
        = f.label :point, for: 'task_point_3', class: 'pt3' do
          %span.num<> 3
          pt
      %li.pt5
        = f.radio_button :point, 5
        = f.label :point, for: 'task_point_5', class: 'pt5' do
          %span.num<> 5
          pt
      %li.pt8
        = f.radio_button :point, 8
        = f.label :point, for: 'task_point_8', class: 'pt8' do
          %span.num<> 8
          pt
      %li.point-radio-text HARD
  .field
    = f.label :status, 'STATUS'
    = f.select :status, [['unstarted'],['doing'],['done']]
    %i.icon-chevron-down.select-caret
  .field
    = f.label :memo, 'MEMO'
    = f.text_area :memo, class: 'memo'
  .actions
    %i.icon-arrow-down
    = f.button "#{content_tag(:i, '', class: 'icon-save')}SAVE".html_safe, type: :submit
