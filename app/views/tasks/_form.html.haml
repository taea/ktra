= form_for(@task) do |f|
  - if @task.errors.any?
    #error_explanation
      %h2
        = pluralize(@task.errors.count, "error")
        prohibited this task from being saved:
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title, 'TITLE'
    = f.text_field :title, class: 'task-title'
  -# FIXME ラジオボタンに変えるかも
  .field
    = f.label :point, 'POINT'
    = f.select :point, [[1],[2],[3],[5],[8]], include_blank: '---'
    %i.icon-chevron-down.select-caret
  -# FIXME hidden_fieldにして現在のSTATUSに応じてSTART, FINISH, RESTART ボタンを表示
  .field
    = f.label :status, 'STATUS'
    = f.select :status, [['unstarted'],['doing'],['done']]
    %i.icon-chevron-down.select-caret
  .field
    = f.label :memo, 'MEMO'
    = f.text_area :memo, class: 'memo'
  .actions
    %i.icon-arrow-down
    = f.button "#{content_tag(:i, '', class: 'icon-save')}SAVE".html_safe, type: :submit
